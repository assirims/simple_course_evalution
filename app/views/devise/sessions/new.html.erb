<div class="card">
  <div class="card-body py-5 px-md-5">
    <div class="container">

      <div class="row justify-content-center">
        <div class="col-sm">
          <h1 class="text-center mb-4"><%= t('.title') %></h1>
        </div>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>
      <div class="form-floating mb-4 custom-class" dir="rtl">
        <%= f.email_field :email, autofocus: true, placeholder: t('.email'), class: 'form-control', id: 'floatingInput' %>
        <%= f.label :email, t('.email'), class: 'form-label', for: 'floatingInput' %>
      </div>

      <div class="form-floating mb-4 custom-class" dir="rtl">
        <%= f.password_field :password, autocomplete: "off", placeholder: t('.password'), class: 'form-control', id: 'floatingInput' %>
        <%= f.label :password, t('.password'), class: 'form-label', for: 'floatingInput' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-switch">
          <%= f.check_box :remember_me, class: "form-check-input", id: "flexSwitchCheckDefault" %>
          <span class="ms-5"></span>
          <%= f.label :remember_me, t('.remember_me'), class: "form-check-label", for: "flexSwitchCheckDefault" %>
        </div>
      <% end -%>

      <%= f.invisible_captcha :confirmed_password, visual_honeypots: true, style: "display: none;" %>

      <div class="mb-4 d-grid mt-4">
        <%= f.submit t('.sign_in'), class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
