<div class="card">
  <div class="card-body py-5 px-md-5">
    <h1 class="text-center"><%= t('.title') %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.text_field :name, autofocus: false, class: 'form-control', placeholder: t('.name') %>
      </div>

      <div class="mb-4">
        <%= f.email_field :email, class: 'form-control', placeholder: t('.email') %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning"><%= t('.waiting_confirmation')%> <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('.new_password')  %>
        <p class="form-text text-muted"><small><%= t('.no_new_password') %></small></p>
      </div>

      <div class="mb-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('.new_password_confirmation')  %>
      </div>

      <div class="mb-4">
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: t('.current_password')  %>
        <p class="form-text text-muted"><small><%= t('.current_password_hint') %></small></p>
      </div>

      <div class="mb-4 d-grid">
        <%= f.submit t('.submit'), class: 'btn btn-lg btn-primary' %>
      </div>
    <% end %>
    <hr>
    <p class="text-center"><%= button_to t('.delete'), registration_path(resource_name), data: { confirm: (t('.confirm')) }, method: :delete, class: 'btn btn-lg btn-danger' %></p>
  </div>
</div>
