<div class="card">
  <div class="card-body py-5 px-md-5">
    <h2 class="text-center"><%= t('.title') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: t('.password') %>
        <% if @minimum_password_length %>
          <p class="text-muted"><small><%= @minimum_password_length %> t('.characters_minimum')</small></p>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('.password_confirmation') %>
      </div>

      <div class="mb-4 d-grid">
        <%= f.submit t('.submit'), class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
