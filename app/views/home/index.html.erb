<div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
  <div class="col-lg-8 align-self-end">
    <h1 class="text-white font-weight-bold"><%= t '.welcom' %></h1>
    <hr class="divider text-white border-4 shadow" />
  </div>
  <div class="col-lg-8 align-self-baseline">
    <p class="text-white mb-5"><%= t '.about' %></p>
    <% if user_signed_in? %>
      <div class="mt-2">
        <%= link_to reviews_path, class: "bttn-blue w-50" do %>
          <%= t '.feedback_button' %>
          <i class="fa fa-comments me-3"></i>
        <% end  %>
      </div>
      <br />
      <div class="mt-0">
        <%= link_to new_review_path, class: "bttn-blue w-50" do %>
          <%= t '.new_reviews_button' %>
          <i class="fa fa-pen-to-square me-3"></i>
        <% end %>
      </div>
    <% else %>

      <%= link_to new_user_registration_path, class: "bttn-blue w-50" do %>
        <%= t '.sign_up_button' %>
        <i class="fa-solid fa-plus me-3"></i>
      <% end  %>

      <%= link_to new_user_session_path, class: "bttn-blue w-50" do %>
        <%= t '.sign_in_button' %>
        <i class="fa-solid fa-right-to-bracket me-3"></i>
      <% end  %>

      <%= link_to reviews_path, class: "bttn-blue w-50" do %>
        <%= t '.feedback_button' %>
        <i class="fa fa-comments me-3"></i>
      <% end  %>

    <% end %>
    <br />
    <p class="text-white mt-2">
      <%= local_date(Time.now, '%B %e, %Y') %>
    </p>

  </div>
</div>
